<h1>Editing Book</h1>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <div class ="actions">
    <%= f.submit "Update Book" %>
  </div>
<% end %>

<%= link_to "show", book_path(@book.id) %>
<%= '|' %>
<%= link_to "back", books_path %>